parameters:
    level: 5
    paths:
        - src
    excludePaths:
        - tests

    # WordPress stubs and plugin constants for type checking
    bootstrapFiles:
        - vendor/php-stubs/wordpress-stubs/wordpress-stubs.php
        - phpstan-bootstrap.php
        - phpstan-stubs/convoworks-wp.php

    # You can still ignore specific errors if needed
    # ignoreErrors:
    #     - '#specific error pattern#'

